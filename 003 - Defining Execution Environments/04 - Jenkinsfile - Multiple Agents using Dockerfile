pipeline {
   

    stages {
        stage('maven'){
            agent {
                dockerfile {
                    dir '003 - Defining Execution Environments'
                    filename '04 - Dockerfile - Multiple Agents using Dockerfile'
                }
            }
            steps{
                sh "mvn --version"
            }
        }
        stage('node'){
            agent {
                dockerfile {
                    dir '003 - Defining Execution Environments'
                    filename '04 - Dockerfile - Multiple Agents using Dockerfile2'
                }
            }
            steps{
                sh "npm --version"
            }
        }
    }
}