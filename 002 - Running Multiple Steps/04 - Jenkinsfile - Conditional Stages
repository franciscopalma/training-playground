pipeline {
    parameters {
                    choice(name: 'stage_choice', choices: ['build', 'test'], description: 'Run on specific platform')
                    
                }
    agent { 
		docker { 
			image 'alpine:latest' 
		}
	}
    stages {
		stage('build'){
			when{
				envirnoment name:'stage_choice', value: 'build'
			}
			steps{
				sh 'echo build'
			}

		}
		stage('test'){
			when{
				envirnoment name:'stage_choice', value: 'test'
			}
			steps{
				sh 'echo test'
			}
			
		}
    }
}