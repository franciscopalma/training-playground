pipeline {
    agent { 
		docker { 
			image 'alpine:latest' 
		}
	}
	environment{
        NUMBER_OF_ISSUES = 0 
    }
	
    stages {
		stage('teste'){
			steps{
				script{
					NUMBER_OF_ISSUES = 10
				}
				
			}
		}
		stage('notification'){
			steps{
				echo NUMBER_OF_ISSUES
			}
		}	
    }
}