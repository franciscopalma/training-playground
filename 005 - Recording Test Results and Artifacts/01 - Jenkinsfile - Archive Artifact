pipeline {
    agent { 
		docker { 
			image 'alpine:latest' 
		}
	}
    stages {
        stage('build') {
            steps {
                sh "curl www.google.com > file.html"
            }
            post {
                always {
                    archiveArtifacts artifacts: 'build/libs/**/*.html', fingerprint: true
                }
            }
        }
    }
}