pipeline {
    agent { 
		docker { 
			image 'alpine:latest' 
		}
	}
    triggers {
      pollSCM '* * * * *'
    }
    stages {
        stage('build') {
            steps {
                sh 'cat /etc/alpine-release'
                sh 'date'
		sh 'cat /etc/os-release'
            }
        }
    }
}
